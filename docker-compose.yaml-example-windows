version: '3'

services:
  app: &app
    container_name: youplayer_python_container
    build:
      context: .
      dockerfile: ./docker/dev_windows/Dockerfile
    environment:
      - PYTHONUNBUFFERED=1
    volumes:
      - ./src:/src
    ports:
      - 8000:8000
    command: python manage.py runserver 0.0.0.0:8000
    networks:
      - youplayer
    depends_on:
      - mysql
    restart: always
  mysql:
    container_name: youplayer_mysql_container
    image: mysql:5.7
    restart: always
    volumes:
      - ./data:/var/lib/mysql
    environment:
      - MYSQL_ROOT_HOST=%
      - MYSQL_DATABASE=youplayer
      - MYSQL_USER=user
      - MYSQL_PASSWORD=adminpass
      - MYSQL_ROOT_PASSWORD=adminpass
    ports:
      - "3306:3306"
    expose:
      - "3306"
    networks:
      - youplayer
    command: ['mysqld', '--character-set-server=utf8mb4', '--collation-server=utf8mb4_unicode_ci']
    restart: always
  rabbitmq:
    container_name: youplayer_rabbitmq_container
    hostname: rabbit
    image: rabbitmq:3.6.6-management
    environment:
      RABBITMQ_DEFAULT_USER: user
      RABBITMQ_DEFAULT_PASS: user
    ports:
      - "5672:5672"
      - "15672:15672"
    networks:
      - youplayer
    restart: always
networks:
  youplayer:
    driver: bridge

volumes:
  mysql:
